<div class="page-header">
  <%= link_to new_task_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Task
  <% end %>  
</div>


<div class="row">
    <div class="col-md-4">
        <h1 class="text-center">ToDo</h1>
        <%= render @to_do %>
    </div>

    <div class="col-md-4">
        <h1 class="text-center">Doing</h1>
        <%= render @doing %>
    </div>

    <div class="col-md-4">
        <h1 class="text-center">Done</h1>
        <%= render @done %>
    </div>
</div>