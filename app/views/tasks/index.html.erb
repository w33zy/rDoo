      <tr>
        <th>Content</th>
        <th>State</th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= render @doing %>
    </tbody>
  </table>
</div>

    
  
  <div class="table-responsive">
    <h1>Done</h1>
    <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Content</th>
        <th>State</th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= render @done %>
    </tbody>
  </table>
</div>

</div>
