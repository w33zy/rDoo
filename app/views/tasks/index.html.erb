<div class="page-header">
  <%= link_to new_task_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Task
  <% end %>  
</div>


<div class="table-responsive">
  <h1>Todo</h1>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Content</th>
        <th>State</th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= render @to_do %>
    </tbody>
  </table>
</div>


  
<div class="table-responsive">
  <h1>Doing</h1>
  <table class="table table-striped table-bordered table-hover">
