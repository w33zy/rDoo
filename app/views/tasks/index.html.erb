<div class="page-header">
  <%= link_to new_task_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Task
  <% end %>  
</div>


<div class="table-responsive">
  <h1>Todo</h1>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Content</th>
        <th>State</th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @to_do) do |task| %>
        <td><%= task.content %></td>
        <td><%= task.state %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Mark as Doing', change_task_path(task, state: "doing"), method: :put %></td>
      <% end %>
    </tbody>
  </table>
</div>


  
<div class="table-responsive">
  <h1>Doing</h1>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Content</th>
        <th>State</th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @doing) do |task| %>
        <td><%= task.content %></td>
        <td><%= task.state %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Mark as To do', change_task_path(task, state: "to_do"), method: :put %></td>
        <td><%= link_to 'Mark as Done', change_task_path(task, state: "done"), method: :put %></td>
      <% end %>
    </tbody>
  </table>
</div>

    
  
  <div class="table-responsive">
    <h1>Done</h1>
    <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Content</th>
        <th>State</th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @done) do |task| %>
        <td><%= task.content %></td>
        <td><%= task.state %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
         <td><%= link_to 'Mark as Doing', change_task_path(task, state: "doing"), method: :put %></td>
      <% end %>
    </tbody>
  </table>
</div>

</div>
